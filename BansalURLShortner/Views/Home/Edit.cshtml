@model BansalURLShortner.Models.URL
@{
    ViewBag.Title = "Edit";
}
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Edit", "Home", new { @class = "form-horizontal" }))
{
    <div class="form-group row">
        @Html.LabelFor(m => m.OriginalURL, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(m => m.OriginalURL, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.OriginalURL)
    </div>

    <div id="result-url" class="form-group row">
        @Html.LabelFor(m => m.ShortURL, new { @class = "col-sm-2" })
        <div class="col-sm-10 col-lg-10">
            <p class="form-control-static">@Model.ShortURL</p>
        </div>
    </div>

    <button class="btn btn-success col-sm-offset-2" type="submit">Short URL</button>
}



